---
import '@styles/global.css'
import '@fontsource-variable/ibm-plex-sans';
import '@fontsource/convergence'
import '@fontsource/ultra'
import Navbar from '@components/Navbar.astro'
import Footer from '@components/Footer.astro'
import { ClientRouter } from 'astro:transitions';
import { slide } from 'astro:transitions';
---

<!doctype html>
<html lang="en" data-theme="konstant">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
		<meta name="generator" content={Astro.generator} />
		<title>Konstant's Pedal Supply</title>
    <ClientRouter />
	</head>
	<body>
    <div class="min-h-screen prose-h1:mb-2 prose-h1:font-normal prose-h2:mt-0 prose-h2:font-semibold">
    <Navbar />
      <div transition:animate={slide({ duration: '0.4s' })} />
      <div class="p-4">
		<slot />
      </div>
		</div>
		<Footer company="Konstant's Pedal Supply"></Footer>
	</body>
</html>


