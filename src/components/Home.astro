---
import { Image } from 'astro:assets';
import services from '@assets/images/services.jpg';
import About from '@markdowns/About.mdx';
import FeatureSection from '@markdowns/FeatureSection.mdx'
---
<div class="hero bg-base-200 min-h-1/3 rounded-md">
  <div class="hero-content">
    <div class="max-w-lg flex flex-col gap-4 py-4">
      <About />
    </div>
  </div>
</div>

<div class="max-w-3/4 mx-auto my-8 flex flex-col lg:flex-row gap-10 items-center">
  <a href="/pedals">
<Image src={services} alt="a group of pedals" width={300} class="rounded-md shadow-md" />
  </a>
  <div class="flex flex-col gap-2">
  <FeatureSection />
  </div>
</div>
