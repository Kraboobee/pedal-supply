---
// src/pages/accessories.astro
import Layout from '../layouts/Layout.astro';

import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

const accessories = await getCollection('accessories');
---

<Layout title="Guitar accessories">
  <main>
    <div class="max-w-3/4 mx-auto p-2">
      <h1>Our Guitar accessories</h1>
      
      <div class="accessories-grid grid gap-8 mt-4">
        {accessories.map((accessory: CollectionEntry<'accessories'>) => (
          <div class="accessory-card flex flex-col justify-between gap-4 rounded-lg shadow-lg p-8 text-center">
          <a href={`/accessories/${accessory.slug}`}>
          <Image
            src={accessory.data.heroImage}
            alt={accessory.data.title}
            width={250}
            class="rounded-md"
          />

            <h2 class="mt-8">{accessory.data.title}</h2>
          </a>
            <p class="price">R{accessory.data.price}</p>
            <p class="description">{accessory.data.description}</p>
            <a id="detail-button" href={`/accessories/${accessory.slug}`}>View Details</a>
          </div>
        ))}
      </div>
    </div>
  </main>
</Layout>

<style>
  .accessories-grid {
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }
  
  .accessory-card {
    transition: all 0.3s ease;
    /* border: 1px solid #e5e7eb; */
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    position: relative;
    overflow: hidden;
  }
  
  .accessory-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #2563eb, #7c3aed, #ec4899);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }
  
  .accessory-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
  
  .accessory-card:hover::before {
    transform: scaleX(1);
  }
  
  .accessory-card img {
    width: 100%;
    height: 350px;
    object-fit: cover;
    border-radius: 8px;
    /* margin-bottom: 1rem; */
    transition: transform 0.3s ease;
  }
  
  .accessory-card:hover img {
    transform: scale(1.05);
  }
  
  .accessory-card h2 {
    font-size: 1.5rem;
    font-weight: 600;
    /* margin: 1rem 0 0.5rem 0; */
    color: #1f2937;
    line-height: 1.2;
  }
  
  .price {
    font-size: 1.75rem;
    font-weight: bold;
    color: #2563eb;
    /* margin: 0.5rem 0; */
    text-shadow: 0 2px 4px rgba(37, 99, 235, 0.2);
  }
  
  .description {
    color: #6b7280;
    /* margin: 1rem 0 1.5rem 0; */
    line-height: 1.5;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .accessory-card #detail-button {
    display: inline-block;
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 500;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 14px 0 rgba(37, 99, 235, 0.3);
    position: relative;
    overflow: hidden;
  }
  
  .accessory-card #detail-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
  }
  
  .accessory-card #detail-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px 0 rgba(37, 99, 235, 0.4);
  }
  
  .accessory-card #detail-button:hover::before {
    left: 100%;
  }
  
  .accessory-card #detail-button:active {
    transform: translateY(0);
  }
  
  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }
    
    h1 {
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    
    .accessories-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .accessory-card {
      padding: 1.25rem;
    }
    
    .accessory-card img {
      height: 200px;
    }
  }
  
  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }
    
    .accessory-card h2 {
      font-size: 1.25rem;
    }
    
    .price {
      font-size: 1.5rem;
    }
  }
</style>

