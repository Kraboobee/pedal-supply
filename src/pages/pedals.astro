---
// src/pages/pedals.astro
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const pedals = await getCollection('pedals');
---

<Layout title="Guitar Pedals">
  <main>
    
    <h1>Our Guitar Pedals</h1>
    <div class="grid grid-cols-3 gap-5 ">
      {pedals.map((pedal) => (
      <div class="rounded-sm shadow-sm p-4 w-3/4">
        <a href={`/pedals/${pedal.slug}`}>
          <h1>{pedal.data.title}</h1>
        </a>
        <Image
          src={pedal.data.heroImage}
          alt={pedal.data.title}
          width={150}
          class="rounded-md"
        />
          <h3 class="price">Price: R {pedal.data.price}</h3>
          <p class="description">{pedal.data.description}</p>
          <a href={`/pedals/${pedal.slug}`}>View Details</a>
        </div>
      ))}
    </div>
  </main>
</Layout>


